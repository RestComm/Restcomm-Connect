    <artifactId>restcomm-connect.rvd.testsuite</artifactId>

    <parent>
        <groupId>org.restcomm</groupId>
        <artifactId>restcomm-connect</artifactId>
        <version>8.1.0-SNAPSHOT</version>
    </parent>
