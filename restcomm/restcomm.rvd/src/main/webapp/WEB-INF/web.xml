<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">

	<module-name>restcomm-rvd</module-name>
	<display-name>RVD</display-name>

	<servlet>
		<servlet-name>RVD Initialization Servlet</servlet-name>
		<servlet-class>org.mobicents.servlet.restcomm.rvd.bootstrap.RvdInitializationServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!-- Disable JBoss RESTeasy JAX-RS implementation as it conflicts with Jersey -->
	<context-param>
		<param-name>resteasy.scan</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.scan.providers</param-name>
		<param-value>false</param-value>
	</context-param>
	<context-param>
		<param-name>resteasy.scan.resources</param-name>
		<param-value>false</param-value>
	</context-param>

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>RESTServices</web-resource-name>
			<url-pattern>/api/projects/*</url-pattern>
			<url-pattern>/api/designer/*</url-pattern>
			<url-pattern>/api/apps/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>RestcommUser</role-name>
			<role-name>Developer</role-name>
		</auth-constraint>
	</security-constraint>

	<login-config>
		<auth-method>KEYCLOAK</auth-method>
		<realm-name>restcomm</realm-name>
	</login-config>

	<security-role>
		<role-name>admin</role-name>
	</security-role>
	<security-role>
		<role-name>RestcommUser</role-name>
	</security-role>
	<security-role>
		<role-name>Developer</role-name>
	</security-role>

</web-app>
